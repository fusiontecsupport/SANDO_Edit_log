@model IEnumerable<scfs_erp.Models.TransactionMaster>

@{
    ViewBag.Title = "Import Invoice(BS)";
}

<div class="col-xs-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">
                <i class="glyphicon glyphicon-import"></i> <strong>@ViewBag.Title</strong>
                <a class="btn btn-success btn-sm pull-right" style="padding:3px;margin:0 0 10px" href="@Url.Action("GSTForm", "BSInvoice")"><i class="fa fa-plus-square "></i> Add New </a>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <br />

        <div class="row">
            <div class="col-xs-3"> </div>
            <div class="col-xs-12">
                <form action="#" method="post" accept-charset="utf-8" id="Invoiceform" data-ng-controller="myController" name="Invoiceform">
                    <table style="margin-left:65px"><tr><td><span style="margin-left:5px">Bill Type</span></td><td>@Html.DropDownList("TRANBTYPE", null, new { @class = "form-control", style = "margin-left:5px" })</td><td><span style="margin-left:5px">Billed to</span></td><td>@Html.DropDownList("REGSTRID", null, new { @class = "form-control", style = "margin-left:5px" })</td><td><span style="margin-left:5px">From</span></td><td><input type="text" id="from" name="from" value="@System.Web.HttpContext.Current.Session["SDATE"]" style="margin-left:5px"></td><td><span style="margin-left:5px">To</span></td><td><input type="text" id="to" name="to" value="@System.Web.HttpContext.Current.Session["EDATE"]" style="margin-left:5px"></td><td><input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" style="margin-left:15px" /></td></tr></table>

                </form>
            </div>
        </div>

        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
            <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th>Time</th>
                    <th>
                        No
                    </th>

                    <th>
                        CHA Name
                    </th>
                    <th>
                        Net Amount
                    </th>
                    <th>GSt Amount</th>

                    <th>
                        S
                    </th>
                    <th>
                        Ack No
                    </th>

                    <th></th>
                </tr>
            </thead>

        </table>
    </div>
</div>

<div id="myModal" class="modal fade">


</div>

