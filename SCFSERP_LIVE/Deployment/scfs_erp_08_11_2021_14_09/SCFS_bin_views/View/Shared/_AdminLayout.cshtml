    <style>

        #box {
            position: relative;
            background: #fff;
            -moz-border-radius: 4px;
            border-radius: 4px;
            color: rgba(0,0,0, .8);
        }


            #box:before, #box:after {
                z-index: -1;
                position: absolute;
                content: "";
                bottom: 15px;
                width: 50%;
                top: 90%;
                background: rgba(0, 0, 0, 0.7);
                box-shadow: 0 15px 10px rgba(0, 0, 0, 0.7);
                transform: rotate(-3deg);
            }

            #box:after {
                transform: rotate(3deg);
                right: 10px;
                left: auto;
            }
    </style>

