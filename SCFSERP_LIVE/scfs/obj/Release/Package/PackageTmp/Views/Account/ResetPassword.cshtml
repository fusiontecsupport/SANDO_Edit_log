@using scfs_erp.Models
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Reset User Password";
}


<div class="col-lg-12">
    @*<h2>@ViewBag.Title.</h2>*@
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">&nbsp;@ViewBag.Title</div>
        </div>

        @Html.Raw(ViewBag.msg)
        <div class="row">
            <div class="col-md-12">
                <div class="panel-body">

                    <p class="text-success">@ViewBag.StatusMessage</p>
                    <div class="row">
                        <div class="col-md-12">


                            @Html.Partial("_ResetPasswordPartial")

                        </div>
                    </div>

                    <div>
                        @if (Request.IsAuthenticated)
                        {
                            if (System.Web.HttpContext.Current.Session["Group"].ToString() == "Manager" || System.Web.HttpContext.Current.Session["Group"].ToString() == "Admin" || System.Web.HttpContext.Current.Session["Group"].ToString() == "SuperAdmin")
                            {
                                @Html.ActionLink("Back to List", "Index")
                            }
                            else
                            {
                                @Html.ActionLink("Back to List", "Index")
                            }
                        }

                    </div>
                </div>

            </div>
        </div>


    </div>
</div>







@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

