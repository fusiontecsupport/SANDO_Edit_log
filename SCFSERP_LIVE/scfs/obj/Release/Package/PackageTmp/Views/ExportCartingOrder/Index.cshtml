@model IEnumerable<scfs_erp.Models.ShippingBillMaster>

@{
    ViewBag.Title = "Export Carting Order Cum Un Loading";
}
<div id="main-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="panel panel-primary" style="background: #323C55;">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <i class="glyphicon glyphicon-export"></i>@ViewBag.Title
                                <a class="btn btn-success btn-sm pull-right" style="padding:3px;margin:0 0 10px" href="@Url.Action("Form", "ExportCartingOrder")"><i class="fa fa-plus-square "></i> Add New </a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3"> </div>
                        <div class="col-xs-6">
                            <form action="#" method="post" accept-charset="utf-8" id="exportcartingorderform" data-ng-controller="myController" name="exportcartingorderform">
                                <label for="from">From</label>
                                <input type="text" id="from" name="from" value="@System.Web.HttpContext.Current.Session["SDATE"]">
                                <label for="to">To</label>
                                <input type="text" id="to" name="to" value="@System.Web.HttpContext.Current.Session["EDATE"]">
                                <input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" />
                            </form>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                        <thead>
                            <tr>



                                <th>
                                    Date
                                </th>
                                <th>Time</th>
                                <th>
                                    No
                                </th>

                                <th>
                                    Exporter Name
                                </th>

                                <th>
                                    CHA Name
                                </th>

                                <th>
                                    Vehicle No
                                </th>

                                <th>
                                    S
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {

    <script>
        $(document).ready(function () {

            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "ExportCartingOrder")",
                "bProcessing": true,
                "bStateSave": true,
                "aaSorting": [[1, "desc"]],
                "oLanguage": {
                    "sSearch": "Search: "
                },
                "aoColumns": [
                    { "sName": "", "sClass": "col-lg-2" },
                    { "sName": "", "sClass": "col-lg-1" },
                    { "sName": "", "sClass": "col-lg-2" },
                    { "sName": " ", "sClass": "col-lg-3" },
                    { "sName": "", "sClass": "col-lg-3"  },
                    { "sName": "", "sClass": "col-lg-1" },
                    { "sName": "", "sClass": "col-lg-1" },

                    {
                        "sClass": "col-sm-2 cent",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {

                                             @*if (oObj.aData[7] == 0)
                                             {
                                                 return ' <a   class="btn btn-primary btn-xs"   href="@Url.Action("Edit", "ExportCartingOrder")/' +
                                             oObj.aData[6] + '\"><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;<a   class="btn btn-default btn-xs"   href="@Url.Action("PrintView", "ExportCartingOrder")/' +
                                                     oObj.aData[6] + '\"  target="_blank"><i class="glyphicon glyphicon-print"></i></a>  &nbsp;&nbsp;<a  class="btn btn-danger del btn-xs" href="#" id="' + oObj.aData[6] + '" "><i class="glyphicon glyphicon-trash"></i> </a> ' +
                                                 ' <a   class="btn btn-warning btn-xs"  href="@Url.Action("TForm", "ExportCartingOrder")/' +
                                                 oObj.aData[6] + '\"  " data-toggle="modal" data-target="#myModal" title="Operation">T</a>  ';
                                             }
                                             else
                                             {*@
                            return ' <a   class="btn btn-primary btn-xs"   href="@Url.Action("Edit", "ExportCartingOrder")/' +
                                oObj.aData[7] + '\"><i class="glyphicon glyphicon-edit"></i></a>   &nbsp;&nbsp;<a   class="btn btn-default btn-xs hide"  title = "Unloading Slip" href="@Url.Action("UnloadingPrintView", "ExportCartingOrder")/' +
                                oObj.aData[7] + '\"  target="_blank"><i class="glyphicon glyphicon-print"></i></a> &nbsp;&nbsp;<a   class="btn btn-success btn-xs" title="Carting Order"  href="@Url.Action("CartingOrderPrintView", "ExportCartingOrder")/' +
                                oObj.aData[7] + '\"  target="_blank"><i class="glyphicon glyphicon-print"></i></a>  &nbsp;&nbsp;<a  class="btn btn-danger del btn-xs" href="#" id="' + oObj.aData[7] + '" "><i class="glyphicon glyphicon-trash"></i> </a> ';
                            //}

                        }
                    }


                ]
            });


            $("#from").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#to").datepicker("option", "minDate", selectedDate);
                }
            });
            $("#to").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#from").datepicker("option", "maxDate", selectedDate);
                }
            });


            //--------------print------------------------//

            $(".print-invoice").on("click", function () {
                var idx = $(this).attr('id');

                turl = "http://216.172.100.137:8080/cfsrpt/print.php?id" + idx;
                cpurl = "http://216.172.100.137:8080/cfsrpt/egatein.pdf";

                var pdf = $.post(turl, function () {
                    alert("success");
                })
                .success(function () { })
                .complete(function () { });

                pdf.complete(function () { window.open(cpurl, "_blank"); });

                return false;

            });

            //end


            //----------------Delete Record event----------//
            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;

                    $.post(base + "/ExportCartingOrder/Del",
                         {
                             //id: idx, fld: "CARTINGORDER"
                             id: idx, fld: "SHIPPINGBILLDETAIL"
                         },
                   function (data, status) {
                       if (data == "") {
                           //alert("You are not Authorized to Delete....!");

                           $('<div></div>').dialog({
                               modal: true,
                               title: "Information",
                               open: function () {
                                   var markup = '<b>' + 'You are not Authorized to Delete....!' + '<b>';
                                   $(this).html(markup);
                               },
                               buttons: {
                                   Ok: function () {
                                       $(this).dialog("close");
                                   }
                               }
                           }); //end confirm dialog
                       }
                       else if (data != "Deleted successfully...") {
                           //alert(data);

                           $('<div></div>').dialog({
                               modal: true,
                               title: "Information",
                               open: function () {
                                   var markup = '<b>' + data + '<b>';
                                   $(this).html(markup);
                               },
                               buttons: {
                                   Ok: function () {
                                       $(this).dialog("close");
                                   }
                               }
                           }); //end confirm dialog
                       }
                       else {
                           //alert(data);

                           $('<div></div>').dialog({
                               modal: true,
                               title: "Information",
                               open: function () {
                                   var markup = '<b>' + data + '<b>';
                                   $(this).html(markup);
                               },
                               buttons: {
                                   Ok: function () {
                                       $(this).dialog("close");
                                   }
                               }
                           }); //end confirm dialog
                           location.replace(base + "/ExportCartingOrder");
                       }
                   });
                }
                return false;
            });//End of delete
        });

    </script>
}

<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

</div>