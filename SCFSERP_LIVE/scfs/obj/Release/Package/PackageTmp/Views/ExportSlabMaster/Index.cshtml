    @section Scripts {
        <script>
        $(document).ready(function () {
            Cha(); add_autocomplete($("#CHADESC"), "CHADESC,CHAID");
            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "ExportSlabMaster")",
                "bProcessing": true,
                "bStateSave": true,
                "aaSorting": [[1, "desc"]],
                "oLanguage": {
                    "sSearch": "Search: "
                },
                "aoColumns": [
                    { "sName": "" },
                    { "sName": " " },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
