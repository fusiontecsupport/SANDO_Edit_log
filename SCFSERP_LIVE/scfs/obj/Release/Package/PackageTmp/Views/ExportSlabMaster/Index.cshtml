    <div class="col-lg-12 container">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title">
                    <i class="glyphicon glyphicon-share"></i><strong>Export Slab Master</strong>
                    <a class="btn btn-success btn-sm pull-right btn-success" style="padding:5px;margin:0 2px 1px;border:1px solid black" href="@Url.Action("Form", "ExportSlabMaster")"><i class="fa fa-plus-square "></i> Create New </a>
                    <a class="btn btn-success btn-sm pull-right btn-warning" style="padding:5px;margin:0 2px 1px;border:1px solid black" href="@Url.Action("NForm", "ExportSlabMaster")"><i class="fa fa-plus-square "></i> Transfer </a>

                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-body">
                    <div class="col-lg-12">
                        <form action="#" method="post" accept-charset="utf-8" id="exportgateinform" data-ng-controller="myController" name="exportgateinform">
                            <table class="table">
                                <tr>
                                    <td>Tariff</td>
                                    <td>
                                        @Html.DropDownList("TARIFFMID", null, new { @class = "form-control", @onchange = "Cha()" })
                                    </td>
                                    <td class="CHA_LBL">CHA</td>
                                    <td>
                                        <div class="chaid">

                                            <input type="text" name="CHADESC" id="CHADESC" value="@Session["FCHANAME"]" class="form-control CHADESC" data-autocomplete-url="/ExportSlabMaster/AutoCha" placeholder="Select CHA" />
                                            <input type="text" class="hide form-control  CHAID" id="CHAID" name="CHAID" value="@Session["FCHAID"]" />

                                        </div>
                                    </td>
                                    <td>Charge Type</td>
                                    <td>
                                        @Html.DropDownList("CHRGETYPE", null, new { @class = "form-control", @data_val = "true", @data_val_required = "Field is required" })
                                    </td>
                                    <td>Slab Type</td>
                                    <td>
                                        @Html.DropDownList("SLABTID", null, new { @class = "form-control", @data_val = "true", @data_val_required = "Field is required" })
                                    </td>
                                    <td><input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" /></td>
                                </tr>
                            </table>
                        </form>
                    </div>
                    <div class="row">
                        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        W.E. From
                                    </th>
                                    <th>
                                        Size
                                    </th>
                                    <th>
                                        Yard
                                    </th>
                                    <th>
                                        Slab Days
                                    </th>
                                    
                                    <th>
                                        Opr. Type
                                    </th>
                                    <th>
                                        W. Type
                                    </th>
                                    <th>
                                        Min
                                    </th>
                                    <th>
                                        Max
                                    </th>
                                    <th>
                                        Value
                                    </th>


                                    <th></th>
                                </tr>
                            </thead>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



