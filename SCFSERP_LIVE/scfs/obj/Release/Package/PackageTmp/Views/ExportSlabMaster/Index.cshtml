                    { "sName": " " },
                    {
                        "sClass": "col-md-2 cent",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            console.log(oObj);
                            return ' <a class="btn btn-primary hide btn-xs"   href="@Url.Action("Edit", "ExportSlabMaster")/' +
                                oObj.aData[9] + '\"  " title="Copy"><i class="glyphicon glyphicon-copy"></i>C</a>  &nbsp;&nbsp;<a  class="btn btn-danger del btn-xs" href="#" id="' +
                                oObj.aData[9] + '\" ><i class="glyphicon glyphicon-trash"></i> </a> ';
                        }
                    }

                ]
            });
            //----------------Delete Record-----------//
            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/ExportSlabMaster/Del",
                        {
                            id: idx, fld: ""
                        },
                        function (data, status) {
                            alert(data);
                            if (data == "Deleted Successfully ...") location.reload();
                            //  location.replace(base + "/ExportSlabMaster");
                        });
                }
                return false;
            });//End

        });

        function Cha() {
            if ($("#TARIFFMID").val() == 4) {
                $(".chaid,.CHA_LBL").show();
                $(".CHADESC").focus();

            } else {

                $(".chaid,.CHA_LBL").hide();
                $("#CHAID").val(0);
                $("#CHADESC").val("");
            }
        }
