@model IEnumerable<scfs_erp.Models.OpenSheetMaster>
@{
    ViewBag.Title = "Open Sheet Master";
}

<div id="main-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="panel panel-primary" style="background: #323C55;">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <i class="glyphicon glyphicon-import"></i><strong>@ViewBag.Title</strong>
                                <a class="btn btn-success btn-sm pull-right" style="padding:3px;margin:0 0 10px" href="@Url.Action("Form", "OpenSheet")"><i class="fa fa-plus-square "></i> Add New </a>
                            </div>
                        </div>
                    </div>
                    <div class="box-content no-padding">
                        <div class="row">
                            <div class="col-xs-3"> </div>
                            <div class="col-xs-6">
                                <form action="#" method="post" accept-charset="utf-8" id="exportgateinform" data-ng-controller="myController" name="exportgateinform">
                                    <label for="from">From</label>
                                    <input type="text" id="from" name="from" value="@System.Web.HttpContext.Current.Session["SDATE"]">
                                    <label for="to">to</label>
                                    <input type="text" id="to" name="to" value="@System.Web.HttpContext.Current.Session["EDATE"]">
                                    <input type="text" id="txtgroup" name="txtgroup" value="@System.Web.HttpContext.Current.Session["Group"]" class="hidden">
                                    <input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" />
                                </form>
                            </div>
                        </div>
                        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                            <thead>
                                <tr>


                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        No
                                    </th>
                                    <th>
                                        CHA Name
                                    </th>


                                    <th>
                                        Vessel Name
                                    </th>
                                    <th>
                                        IGM No
                                    </th>
                                    <th>Line No</th>
                                    <th>
                                        BOE No
                                    </th>
                                    <th>
                                        BOE Date
                                    </th>
                                    <th>S</th>
                                    <th class="hide"></th>
                                    <th></th>
                                    
                                </tr>
                            </thead>
                            @*<tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
