@model IEnumerable<scfs_erp.Models.ConditionMaster>

@{
    ViewBag.Title = "Condition Master";
}

<div class="box">
    <div class="box-header">
        <div class="box-name">
            <i class="glyphicon glyphicon-share"></i><strong>@ViewBag.Title</strong>
        </div>
        <div class="box-icons">
            <button onclick="parent.location = '@Url.Action("Form","ConditionMaster")'; return false;" class=" btn-success"> Create New </button>
        </div>
        <div class="no-move"></div>
    </div>
    <div class="box-content no-padding">
        <br />
        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.CONDTNCODE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CONDTNDESC)
                    </th>
                    <th class="hidden1">
                        @Html.DisplayNameFor(model => model.DISPSTATUS)
                    </th>

                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {

            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "ConditionMaster")",
                "bProcessing": true,
                "bStateSave": true,
                "aaSorting": [[1, "desc"]],
                "oLanguage": {
                    "sSearch": "Search: "
                },   
                "aoColumns": [
                    { "sName": "" },
                    { "sName": " ", "sClass": "action" },
                    { "sName": "" },

                    {
                        "sClass": "col-lg-1 cent",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            return ' <a   class="btn btn-primary btn-xs"   href="/ConditionMaster/Edit/' +
                                oObj.aData[3] + '\" title=Modify Details "><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;<a  class="btn btn-danger btn-xs del" href="#" id="' +
                                oObj.aData[3] + '\"> <i class="glyphicon glyphicon-trash"></i> </a> ';
                        }
                    }

                ]
            });

            //--------------Delete Record-----------//
            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/ConditionMaster/Del",
                        {
                            id: idx, fld: "CONDITIONMASTER"
                        },
                        function (data, status) {
                            alert(data);
                            if (data == "Deleted Successfully ...")
                                location.replace(base + "/ConditionMaster");
                        });
                }
                return false;
            });//End
        });
    </script>
}
