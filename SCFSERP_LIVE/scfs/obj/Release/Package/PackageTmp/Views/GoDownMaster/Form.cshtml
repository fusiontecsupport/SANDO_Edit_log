
@using scfs_erp.Models;
@model scfs_erp.Models.GodownMaster

@{
    ViewBag.Title = "Godown Master";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>GoDown Master</strong>
                </div>
            </div>
            <div class="box-content" data-ng-app="myModule">
                <form action="@Url.Content("~/GoDownMaster/savedata")" method="post" accept-charset="utf-8" id="godownmasterform" data-ng-controller="myController" name="godownmasterform">
                    @Html.ValidationSummary(true)
                    <fieldset id="GodownMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.GDWNID, new { @class = "form-control  GDWNID", @id = "GDWNID" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.GDWNCODE)*@
                                        @Html.TextBoxFor(model => Model.GDWNCODE, new { @class = "form-control GDWNCODE", @id = "GDWNCODE" })
                                        <input type="text" value="@Model.GDWNCODE" name="i_GDWNCODE " hidden />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.GDWNDESC)*@
                                        @Html.TextBoxFor(model => Model.GDWNDESC, new { @class = "form-control  GDWNDESC", @id = "GDWNDESC" })
                                        <input type="text" value="@Model.GDWNDESC" name="i_GDWNDESC" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DISPSTATUS)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs  pull-left" onclick="JavaScript:history.back()" />
                                    <input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs" id="save" />*@
                                <a href="@Url.Action("Index", "GoDownMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />

                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $('#btnsave').click(function () {
        if ($('#GDWNCODE').val() == "") {
            alert('Please Enter Code !!');
            $('#GDWNCODE').focus();
            return false;
        }
        if ($('#GDWNDESC').val() == "") {
            alert('Please Enter Description !!');
            $('#GDWNDESC').focus();
            return false;
        }

        var pdate = new Date();

        if ($('#GDWNID').val() == "") { $('#GDWNID').val(0); }

        var tab = {
            GDWNID: $('#GDWNID').val(),
            GDWNCODE: $('#GDWNCODE').val(),
            GDWNDESC: $('#GDWNDESC').val(),
            DISPSTATUS: $('#DISPSTATUS').val(),
            CUSRID: "",
            LMUSRID: 1,
            PRCSDATE: pdate
        };
        $.ajax({
            //url: "/GoDownMaster/savedata",
            url: "@Url.Action("savedata", "GoDownMaster")",
            data: JSON.stringify(tab),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (status) {
                if (status == "Update") {
                    alert('GoDown Master Details Updated Successfully !! ');

                    var returnurl = "@Url.Action("Index", "GoDownMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Success") {
                    alert('GoDown Master Details Inserted Successfully !! ');
                    var returnurl = "@Url.Action("Index", "GoDownMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Existing") {
                    alert('GoDown Master Details Already Inserted !! ');
                    $('#GRADECODE').val("");
                    $('#GRADEDESC').val("");
                    var returnurl = "@Url.Action("Form", "GoDownMaster")";
                    window.location.href = returnurl;
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });

    });
</script>


}


