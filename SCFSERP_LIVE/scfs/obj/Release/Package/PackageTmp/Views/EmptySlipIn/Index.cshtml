
@{
    ViewBag.Title = "Empty Slip";
}

<style>
    .frm_hide {
        display: none;
    }

    #sidebar {
        display: none;
    }

    #main-content {
        margin-left: auto;
    }
</style>

<div id="main-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">

                    <div class="panel panel-primary" style="background: #323C55;">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <i class="glyphicon glyphicon-import"></i>@ViewBag.Title
                                <a class="btn btn-success btn-sm pull-right" style="padding:3px;margin:0 0 10px" href="@Url.Action("Form", "EmptySlipIn")"><i class="fa fa-plus-square "></i> Add New </a>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-3"> </div>
                        <div class="col-xs-6">
                            <form action="#" method="post" accept-charset="utf-8" id="emptyvtform" data-ng-controller="myController" name="emptyvtform">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-3">
                                            <label for="from">From</label>
                                            <div class="form-group">
                                                <input type="text" id="from" name="from" class="form-control" value="@System.Web.HttpContext.Current.Session["SDATE"]">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="from">To</label>
                                            <div class="form-group">
                                                <input type="text" id="to" name="to" class="form-control" value="@System.Web.HttpContext.Current.Session["EDATE"]">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="from"></label>
                                            <div class="form-group">
                                                <input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                        <thead>
                            <tr>

                                <th>
                                    Date
                                </th>
                                <th>
                                    No
                                </th>


                                <th>
                                    Container&nbsp;No
                                </th>
                                <th>Size</th>

                                <th>
                                    Streamer&nbsp;Name
                                </th>
                                <th>Vehicle No</th>
                                <th>S</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>

                                <th colspan="11" style="text-align:center"></th>
                            </tr>

                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "EmptySlipIn")",
                "bProcessing": true,
                "bStateSave": true,
                "oLanguage": { "sSearch": "Search:" },
                "aaSorting": [[1, "desc"]],
                "aoColumns": [
                    { "sName": "", "sClass": "col-lg-2" },
                    { "sName": " " },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": " " },
                    { "sName": "" },

                    { "sName": "", "sClass": "col-lg-1" },
                    {
                        "sClass": "col-md-1 cent",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            // if (oObj.aData[4] == 20) TNOS++;
                            return ' <a   class="btn btn-primary btn-xs"   href="@Url.Action("Edit", "EmptySlipIn")/' +
                                oObj.aData[7] + '\"  "><i class="glyphicon glyphicon-edit" style="font-size:small"></i></a>&nbsp;&nbsp;<a   class="btn btn-default btn-xs"   href="@Url.Action("PrintView", "EmptySlipIn")/' +
                                oObj.aData[7] + '" target="_blank"  ><i class="glyphicon glyphicon-print"></i></a> &nbsp;&nbsp;<a  class="btn btn-danger del btn-xs" href="#" id="' +
                                oObj.aData[7] + '\" ><i class="glyphicon glyphicon-trash" style="font-size:small "></i> </a>  ';
                        }
                    }

                ],
                "fnFooterCallback": function (nRow, aaData, iStart, iEnd, aiDisplay) {
                    //alert(2);
                    var TNOS = 0; var FNOS = 0; var TUES = 0; var FNOSS = 0; var Total = 0;

                    /*
                     * Calculate the total market share for all browsers in this table (ie inc. outside
                     * the pagination)
                     */


                    /* Calculate the market share for browsers on this page */

                    for (var i = 0; i < aaData.length; i++) {
                        //alert("2" + aaData[aiDisplay[i]][3]);
                        if (aaData[aiDisplay[i]][3] == 20) TNOS++;
                        if (aaData[aiDisplay[i]][3] == 40) FNOS++;
                        if (aaData[aiDisplay[i]][3] == 45) FNOSS++;
                        TUES = eval(TNOS) + eval(2 * FNOS) + eval(2 * FNOSS);
                        Total = eval(TNOS) + eval(FNOS) + eval(FNOSS);

                    }
                    var nCells = nRow.getElementsByTagName('th'); nCells[0].innerHTML = '<span style="color:red">20":</span>' + eval(TNOS) + '&nbsp;&nbsp;&nbsp;&nbsp;<th></th>' + '<span style="color:red">40":</span>' + eval(FNOS) + '&nbsp;&nbsp;&nbsp;&nbsp;<th></th>' + '<span style="color:red">45":</span>' + eval(FNOSS) + '&nbsp;&nbsp;&nbsp;&nbsp;<th></th>' + '&nbsp;&nbsp;&nbsp;&nbsp;<span style="color:green">TOTAL: </span>' + eval(Total) + '&nbsp;&nbsp;&nbsp;&nbsp;<span style="color:red">TUES:</span>' + eval(TUES)
                }

            });

            $("#from").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#to").datepicker("option", "minDate", selectedDate);
                }
            });

            $("#to").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#from").datepicker("option", "maxDate", selectedDate);
                }
            });


            $(".print-invoice").on("click", function () {
                var idx = $(this).attr('id');

                turl = "http://216.172.100.137:8080/cfsrpt/print.php?id" + idx;
                cpurl = "http://216.172.100.137:8080/cfsrpt/egatein.pdf";

                var pdf = $.post(turl, function () {
                    alert("success");
                })
                    .success(function () { })
                    .complete(function () { });
                pdf.complete(function () { window.open(cpurl, "_blank"); });

                return false;
            });

            //--------Delete record----------------//
            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/EmptySlipIn/Del",
                        {
                            id: idx, fld: "EmptySlipIn"
                        },
                        function (data, status) {
                            alert(data);
                            if (data == "Deleted Successfully ...")
                                location.replace(base + "/EmptySlipIn");
                        });
                }
                return false;
            });//End
        });


    </script>
}