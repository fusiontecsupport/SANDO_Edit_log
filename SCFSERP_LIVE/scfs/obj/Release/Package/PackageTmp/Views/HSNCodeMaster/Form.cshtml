
@using scfs_erp.Models;
@model scfs_erp.Models.HSNCodeMaster

@{
    ViewBag.Title = "HSNCode Master";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading ">
                Cost Factor
            </div>
            @Html.Raw(ViewBag.msg)
            <div class="panel-body fusion_frm">
                @*<form action="@Url.Content("~/HSNCodeMaster/savedata")" method="post" accept-charset="utf-8" id="hsncodemasterform" data-ng-controller="myController" name="hsncodemasterform">*@
                <form>
                    @Html.ValidationSummary(true)
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-4 hidden">
                                <div class="form-group">
                                    <label>Primary  </label>
                                    @Html.TextBoxFor(model => Model.HSNID, new { @class = "form-control  HSNID", @id = "HSNID" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Code <span class="required-field"></span></label>
                                    @Html.TextBoxFor(model => Model.HSNCODE, new { @class = "form-control  HSNCODE", @id = "HSNCODE" })
                                    @Html.ValidationMessageFor(mode => Model.HSNCODE)
                                    <input type="text" value="@Model.HSNCODE" name="i_HSNCODE" hidden>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Description <span class="required-field"></span></label>
                                    @Html.TextBoxFor(model => Model.HSNDESC, new { @class = "form-control  HSNDESC", @id = "HSNDESC" })
                                    @Html.ValidationMessageFor(mode => Model.HSNDESC)
                                    <input type="text" value="@Model.HSNDESC" name="i_HSNDESC" hidden>
                                </div>
                            </div>
                            <div class="col-md-2 ">
                                <div class="form-group">
                                    <label>GST % </label>
                                    @Html.TextBoxFor(model => Model.TAXEXPRN, new { @class = "form-control TAXEXPRN", @id = "TAXEXPRN", @onkeypress = "return isNumberCommaDot(event)" })
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Status </label>
                                    @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 ">
                            <fieldset>
                                <legend style="font-family:Arial;font-size:small;">Local Tax Details</legend>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>CGST % </label>
                                        @Html.TextBoxFor(model => Model.CGSTEXPRN, new { @class = "form-control CGSTEXPRN", @id = "CGSTEXPRN", @onkeypress = "return isNumberCommaDot(event)" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>SGST % </label>
                                        @Html.TextBoxFor(model => Model.SGSTEXPRN, new { @class = "form-control SGSTEXPRN", @id = "SGSTEXPRN", @onkeypress = "return isNumberCommaDot(event)" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>IGST % </label>
                                        @Html.TextBoxFor(model => Model.IGSTEXPRN, new { @class = "form-control IGSTEXPRN", @id = "IGSTEXPRN", @onkeypress = "return isNumberCommaDot(event)" })
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        <div class="col-md-12 ">
                            <fieldset>
                                <legend style="font-family:Arial;font-size:small;">Interstate Tax Details</legend>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>CGST % </label>
                                        @Html.TextBoxFor(model => Model.ACGSTEXPRN, new { @class = "form-control ACGSTEXPRN", @id = "ACGSTEXPRN", @onkeypress = "return isNumberCommaDot(event)" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>SGST % </label>
                                        @Html.TextBoxFor(model => Model.ASGSTEXPRN, new { @class = "form-control ASGSTEXPRN", @id = "ASGSTEXPRN", @onkeypress = "return isNumberCommaDot(event)" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>IGST % </label>
                                        @Html.TextBoxFor(model => Model.AIGSTEXPRN, new { @class = "form-control AIGSTEXPRN", @id = "AIGSTEXPRN", @onkeypress = "return isNumberCommaDot(event)" })
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-md-12 box-footer">
                            @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs  pull-left" onclick="JavaScript:history.back()" />*@
                            <a href="@Url.Action("Index", "HSNCodeMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                            @*<a href="javascript:document.getElementById('hsncodemasterform').submit()" class="btn btn-primary btn-xs  ">Save</a>*@
                            <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

<script>
        $('.msg').delay(1200).fadeOut(1000);
        //$(".CURNCODE").keyup(function () {//...capitalize each

        //    $(this).val($(this).val().toUpperCase());
        //});

    $('#btnsave').click(function () {
        if ($('#HSNCODE').val() == "") {
            alert('Please Enter Code !!');
            $('#HSNCODE').focus();
            return false;
        }
        if ($('#HSNDESC').val() == "") {
            alert('Please Enter Description !!');
            $('#HSNDESC').focus();
            return false;
        }

        var pdate = new Date();

        if ($('#HSNID').val() == "") { $('#HSNID').val(0); }
        if ($('#CGSTEXPRN').val() == "") { $('#CGSTEXPRN').val(0.00); }
        if ($('#SGSTEXPRN').val() == "") { $('#SGSTEXPRN').val(0.00); }
        if ($('#IGSTEXPRN').val() == "") { $('#IGSTEXPRN').val(0.00); }
        if ($('#ACGSTEXPRN').val() == "") { $('#ACGSTEXPRN').val(0.00); }
        if ($('#ASGSTEXPRN').val() == "") { $('#ASGSTEXPRN').val(0.00); }
        if ($('#AIGSTEXPRN').val() == "") { $('#AIGSTEXPRN').val(0.00); }

        var tab = {
            HSNID: $('#HSNID').val(),
            HSNCODE: $('#HSNCODE').val(),
            HSNDESC: $('#HSNDESC').val(),
            TAXEXPRN: $('#TAXEXPRN').val(),
            DISPSTATUS: $('#DISPSTATUS').val(),
            CGSTEXPRN: $('#CGSTEXPRN').val(),
            SGSTEXPRN: $('#SGSTEXPRN').val(),
            IGSTEXPRN: $('#IGSTEXPRN').val(),
            ACGSTEXPRN: $('#ACGSTEXPRN').val(),
            ASGSTEXPRN: $('#ASGSTEXPRN').val(),
            AIGSTEXPRN: $('#AIGSTEXPRN').val(),
            CUSRID: "",
            LMUSRID: 1,
            PRCSDATE: pdate
        };
        $.ajax({
            url: "/HSNCodeMaster/savedata",
            data: JSON.stringify(tab),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (status) {
                if (status == "Update") {
                    alert('HSNCode Master Details Updated Successfully !! ');

                    var returnurl = "@Url.Action("Index", "HSNCodeMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Success") {
                    alert('HSNCode Master Details Inserted Successfully !! ');
                    var returnurl = "@Url.Action("Index", "HSNCodeMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Existing") {
                    alert('HSNCode Master Details Already Inserted !! ');                    
                    $('#HSNCODE').val("");
                    $('#HSNDESC').val("");
                    $('#TAXEXPRN').val("0.00");
                    $('#CGSTEXPRN').val("0.00");
                    $('#SGSTEXPRN').val("0.00");
                    $('#IGSTEXPRN').val("0.00");
                    $('#ACGSTEXPRN').val("0.00");
                    $('#ASGSTEXPRN').val("0.00");
                    $('#AIGSTEXPRN').val("0.00");
                    var returnurl = "@Url.Action("Form", "HSNCodeMaster")";
                    window.location.href = returnurl;
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });


    });


</script>
}
