@using scfs_erp.Models;


@model scfs_erp.Models.AccountGroupMaster


@{
    ViewBag.Title = "Account Group Master";
 }

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>Account Group Master</strong>

                </div>
            </div>

            <div class="box-content" data-ng-app="myModule">
                <form action="@Url.Content("~/AccountGroupMaster/savedata")" method="post" accept-charset="utf-8" id="accountgroupmasterform" data-ng-controller="myController" name="accountgroupmasterform">


                    @Html.ValidationSummary(true)

                    <fieldset id="AccountGroupMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.ACHEADGID, new { @class = "form-control  ACHEADGID", @id = "ACHEADGID" })
                                    </div>

                                </div>



                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">

                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span> </label>
                                        @Html.TextBoxFor(model => Model.ACHEADGCODE, new { @class = "form-control ACHEADGCODE", @id = "ACHEADGCODE",@required=true })
                                        <input type="text" value="@Model.ACHEADGCODE" name="i_ACHEADGCODE" hidden >
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description<span class="required-field"></span> </label>
                                        @Html.TextBoxFor(model => Model.ACHEADGDESC, new { @class = "form-control ACHEADGDESC", @id = "ACHEADGDESC", @required = true })
                                        <input type="text" value="@Model.ACHEADGDESC" name="i_ACHEADGDESC" hidden >
                                    </div>

                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control DISPSTATUS", @id = "DISPSTATUS" })

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs  pull-left" onclick="JavaScript:history.back()" />*@
                                <a href="@Url.Action("Index", "AccountGroupMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                <input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs  " id="save" />

                            </div>
                        </div>
                    </fieldset>

                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {

        @Scripts.Render("~/bundles/jqueryval")

}
