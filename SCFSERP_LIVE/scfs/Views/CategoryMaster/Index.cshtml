@model IEnumerable<scfs_erp.Models.CategoryMaster>

@{
    ViewBag.Title = "Category Master";  
}

<div class="col-lg-12">
    <div class="panel panel-primary" style="background: #323C55;">
        <div class="panel-heading">
            <div class="panel-title">
                <i class="fa fa-bar-chart-o fa-fw"></i>@ViewBag.Title
                <a class="btn btn-success btn-sm pull-right" style="padding:3px;margin:0 0 10px" href="@Url.Action("Create", "CategoryMaster")"><i class="fa fa-plus-square "></i> Add New </a><div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3"> </div>
        <div class="col-xs-8">
            <form action="#" method="post" accept-charset="utf-8" id="form" data-ng-controller="myController" name="form">
                <table><tr><td>Category Type</td><td>@Html.DropDownList("CATETID", null, new { @class = "form-control" })  </td><td> &nbsp;&nbsp;&nbsp;<input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" /></td></tr></table>

            </form>


        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

            <div class="panel-body">

                <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>State</th>
                            <th>HSN Code</th>
                            <th>GST No.</th>
                            <th>PAN No.</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>

                </table>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {

            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "CategoryMaster")",
                "bProcessing": true,
                "bStateSave": true,
                "aaSorting": [[1, "desc"]],
                "oLanguage": {
                    "sSearch": "Search: "
                },
                "aoColumns": [
                    { "sName": "", "sClass": "col-lg-1" },
                    { "sName": " ", "sClass": "col-lg-4" },

                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    {
                        "sClass": "col-lg-1",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            return ' <a   class="btn btn-primary btn-xs"   href="/CategoryMaster/Edit/' +
                                oObj.aData[8] + '\"><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;<a  class="btn btn-danger btn-xs del" href="#" id="' +
                                oObj.aData[8] + '\"><i class="glyphicon glyphicon-trash"></i> </a> ';
                        }
                    }

                ]
            });
            //-------------Delete Record--------------//
            $(document).on("click", "a.del", function () {

                var r=confirm("Are you sure to delete this record ?");

                if (r==true)
                {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base +"/CategoryMaster/Del",
                           {
                               id: idx, fld: "CATEGORYMASTER"
                           },
                          function(data,status){
                              alert(data);
                              if(data=="Deleted Successfully ...")
                                  location.replace(base + "/CategoryMaster");
                          });
                }
                return false;
            });//End
        });
    </script>
}
