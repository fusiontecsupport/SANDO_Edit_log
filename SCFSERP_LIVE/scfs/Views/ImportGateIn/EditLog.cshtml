@{
    ViewBag.Title = "Edit log";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 class="page-header">Edit log</h2>
            <p class="text-muted">Choose a module to view the edit history. Start with Gate In.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-sign-in"></i> Gate In</h3>
                </div>
                <div class="panel-body">
                    <p>View changes captured in <strong>GateInDetailEditLog</strong>, including field-wise old and new values, who changed it, and when.</p>
                    <form method="get" action="@Url.Action("EditLogGateIn", "ImportGateIn")" class="form-inline" role="form">
                        <div class="form-group">
                            <label for="gidid" class="control-label">Filter by GIDID (optional)</label>
                            <input type="number" min="1" class="form-control" id="gidid" name="gidid" placeholder="e.g. 12345" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa fa-sign-in"></i> GateIn
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
