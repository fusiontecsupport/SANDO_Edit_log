
@using scfs_erp.Models;
@model scfs_erp.Models.ExportTariffTypeMaster

@{
    ViewBag.Title = "Export Tariff Type Master";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>Export Tariff Type</strong>
                </div>
            </div>
            <div class="box-content" data-ng-app="myModule">
                <form action="@Url.Content("~/ExportTariffTypeMaster/savedata")" method="post" accept-charset="utf-8" id="exporttarifftypemasterform" data-ng-controller="myController" name="exporttarifftypemasterform">
                    @Html.ValidationSummary(true)
                    <fieldset id="ExportTariffTypeMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.TARIFFTMID, new { @class = "form-control  TARIFFTMID", @id = "TARIFFTMID" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.TARIFFTMCODE)*@
                                        @Html.TextBoxFor(model => Model.TARIFFTMCODE, new { @class = "form-control TARIFFTMCODE", @id = "TARIFFTMCODE" })
                                        <input type="text" value="@Model.TARIFFTMCODE" name="i_TARIFFTMCODE" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.TARIFFTMDESC)*@
                                        @Html.TextBoxFor(model => Model.TARIFFTMDESC, new { @class = "form-control  TARIFFTMDESC", @id = "TARIFFTMDESC" })
                                        <input type="text" value="@Model.TARIFFTMDESC" name="i_TARIFFTMDESC" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Soft Dept<span class="required-field"></span></label>@*>@Html.ValidationMessageFor(model => model.SDPTID)*@
                                        @Html.DropDownList("SDPTID", null, "--Please select an option--", new { @class = "form-control", @data_val = "true", @data_val_required = "Field is required" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DISPSTATUS)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs pull-left" onclick="JavaScript:history.back()" />
                                    <input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs" id="save" />*@

                                <a href="@Url.Action("Index", "ExportTariffTypeMaster")" class="btn btn-primary btn-xs pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script>
    $('#btnsave').click(function () {
        if ($('#TARIFFTMCODE').val() == "") {
            alert('Please Enter Code !!');
            $('#TARIFFTMCODE').focus();
            return false;
        }
        if ($('#TARIFFTMDESC').val() == "") {
            alert('Please Enter Description !!');
            $('#TARIFFTMDESC').focus();
            return false;
        }
        if ($('#SDPTID').val() == "") {
            alert('Please Select Soft Dept !!');
            $('#SDPTID').focus();
            return false;
        }
        
        var pdate = new Date();

        if ($('#TARIFFTMID').val() == "") { $('#TARIFFTMID').val(0); }

        if ($('#SDPTID').val() == "") { $('#SDPTID').val(0); }

        var tab = {
            TARIFFTMID: $('#TARIFFTMID').val(),
            TARIFFTMCODE: $('#TARIFFTMCODE').val(),
            TARIFFTMDESC: $('#TARIFFTMDESC').val(),
            SDPTID: $('#SDPTID').val(),           
            DISPSTATUS: $('#DISPSTATUS').val(),
            CUSRID: "",
            LMUSRID: 1,
            PRCSDATE: pdate
        };

        $.ajax({
            //url: "/ExportTariffTypeMaster/savedata",
            url:"@Url.Action("savedata", "ExportTariffTypeMaster")",
            data: JSON.stringify(tab),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (status) {
                if (status == "Update") {
                    alert('Exportb Tariff Master Details Updated Successfully !! ');

                    var returnurl = "@Url.Action("Index", "ExportTariffTypeMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Success") {
                    alert('Export Tariff Master Details Inserted Successfully !! ');
                    var returnurl = "@Url.Action("Index", "ExportTariffTypeMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Existing") {
                    alert('Export Tariff Master Details Already Inserted !! ');
                    $('#TARIFFMCODE').val("");
                    $('#TARIFFMDESC').val("");
                    var returnurl = "@Url.Action("Form", "ExportTariffTypeMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Error") {
                    alert(Message);
                    var returnurl = "@Url.Action("Index", "ExportTariffTypeMaster")";
                    window.location.href = returnurl;
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });

    });
    </script>
}
