@model IEnumerable<scfs_erp.Models.GateInBlockDetails>
@{
    ViewBag.Title = "GateIn Block Details";
}


<div id="main-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">

                <div class="box">
                    <div class="panel panel-primary" style="background: #323C55;">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <i class="glyphicon glyphicon-import"></i>Gate In Block
                                <a class="btn btn-success btn-sm pull-right" style="padding:3px;margin:0 0 10px" href="@Url.Action("Form", "ImportGateInBlock")"><i class="fa fa-plus-square "></i> Add New </a>
                            </div>
                        </div>
                    </div>
                    <div class="box-content no-padding">

                        <div class="row">
                            <div class="col-xs-3"> </div>
                            <div class="col-xs-6">
                                <form action="#" method="post" accept-charset="utf-8" id="exportgateinform" data-ng-controller="myController" name="exportgateinform">
                                    <label for="from">From</label>
                                    <input type="text" id="from" name="from" value="@System.Web.HttpContext.Current.Session["SDATE"]">
                                    <label for="to">to</label>
                                    <input type="text" id="to" name="to" value="@System.Web.HttpContext.Current.Session["EDATE"]">
                                    <input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" />
                                </form>
                            </div>
                        </div>

                        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>No</th>
                                    <th>Container&nbsp;No</th>
                                    <th>Size</th>
                                    <th>IGM&nbsp;No</th>
                                    <th>Block Type</th>
                                    <th>Vessel&nbsp;Name</th>
                                    <th>Steamer&nbsp;Name</th>
                                    <th>Product</th>
                                    <th>S.Amend/Mismatch</th>
                                    <th>Scanned</th>
                                    <th>S</th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "ImportGateInBlock")",
                "bProcessing": true,
                "bStateSave": true,
                "aaSorting": [[1, "desc"]],
                "oLanguage": {
                    "sSearch": "Search: "
                },
                "aoColumns": [
                    { "sName": "" },
                    { "sName": " " },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": " " },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": " " },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    {
                        "sClass": "col-md-2 cent",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            //alert(oObj.aData[12]);
                            return ' <a   class="btn btn-primary btn-xs"   href="@Url.Action("Edit", "ImportGateInBlock")/' +
                                oObj.aData[12] + '\"  "><i class="glyphicon glyphicon-edit" style="font-size:small"></i></a>  &nbsp;&nbsp; <a  class="btn btn-danger del btn-xs" href="#" id="' +
                                oObj.aData[12] + '\" ><i class="glyphicon glyphicon-trash" style="font-size:small "></i> </a> ';
                        }
                    }
                ]
            });

            $("#from").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#to").datepicker("option", "minDate", selectedDate);
                }
            });
            $("#to").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#from").datepicker("option", "maxDate", selectedDate);
                }
            });

            //-------------------------Delete Record--------//
            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/ImportGateInBlock/Del",
                        {
                            id: idx, fld: "GATEIN_BLOCK_DETAILS"
                        },
                        function (data, status) {
                            alert(data);
                            if (data == "Deleted Successfully ...")
                                location.replace(base + "/ImportGateInBlock");
                        });
                }
                return false;
            });//End
        });
    </script>
}
