                                return '<a   class="btn btn-warning btn-xs " target="_blank"  href="@Url.Action("UPrintView", "CreditNoteEInvoice")/' +
                                    oObj.aData[8] + '\"  ><i class="glyphicon glyphicon-print"></i></a>  ';
                            }
                            else if ((oObj.aData[6] != null || oObj.aData[6] > 0)) {
                                return '<a   class="btn btn-success btn-xs EInvoice @ViewBag.aaa"  href="#" id="' + oObj.aData[9] + '" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-magnet"></i></a>  &nbsp;&nbsp;<a   class="btn btn-warning btn-xs" target="_blank"  href="@Url.Action("UPrintView", "CreditNoteEInvoice")/' +
                                    oObj.aData[8] + '\"  ><i class="glyphicon glyphicon-print"></i></a> ';

                            }
                            else if ((oObj.aData[6] == null || oObj.aData[6] == 0) && ($('.txtgroup').val() == "Billing")) {
                                return '<a   class="btn btn-warning btn-xs" target="_blank"  href="@Url.Action("UPrintView", "CreditNoteEInvoice")/' +
                                    oObj.aData[8] + '\"  ><i class="glyphicon glyphicon-print"></i></a> ';

                            }
                            else {
                                return '<a   class="btn btn-primary btn-xs EInvoice @ViewBag.aaa"  href="#" id="' + oObj.aData[8] + '" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-magnet"></i></a>  &nbsp;&nbsp;<a   class="btn btn-warning btn-xs" target="_blank"  href="@Url.Action("UPrintView", "CreditNoteEInvoice")/' +
