@section Scripts {

    <script>

        $(function () {


            add_autocomplete($("#VSLNAME"), "VSLNAME,VSLID");
            add_autocomplete($("#STMRNAME"), "STMRNAME,STMRID");
            add_autocomplete($("#IMPRTNAME"), "IMPRTNAME,IMPRTID");
            add_autocomplete($("#SLOTID"), "SLOTID,SLOTDESC");
            $(".datepicker").datepicker();

            $('.datetime').datetimepicker({

                dateFormat: 'dd/mm/yy',
                timeFormat: 'hh:mm'


            });
           

            $("#COMPNAME").change(function () {
                $("#COMPDNAME").val($("#COMPNAME").val());
            })

        });


    </script>


}






