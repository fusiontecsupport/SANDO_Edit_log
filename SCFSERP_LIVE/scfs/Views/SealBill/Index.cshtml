@model IEnumerable<scfs_erp.Models.TransactionMaster>

@{
    ViewBag.Title = "Seal Invoice";
}

<div id="main-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">

                    <div class="panel panel-primary" style="background: #323C55;">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <i class="glyphicon glyphicon-export"></i>&nbsp;@ViewBag.Title
                                <a class="btn btn-success btn-sm pull-right" style="padding:3px;margin:0 0 10px" href="@Url.Action("GSTForm", "SealBill")"><i class="fa fa-plus-square "></i> Add New </a>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-3"> </div>
                        <div class="col-md-7">
                            <form action="#" method="post" accept-charset="utf-8" id="SealBillform" data-ng-controller="myController" name="SealBillform">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-2">
                                            <label for="from">Bill Type</label>
                                            <div class="form-group">
                                                @Html.DropDownList("TRANBTYPE", null, new { @class = "form-control TRANBTYPE", @id = "TRANBTYPE" })

                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="from">Bill To</label>
                                            <div class="form-group">
                                                @Html.DropDownList("REGSTRID", null, new { @class = "form-control REGSTRID", @id = "REGSTRID" })
                                            </div>
                                        </div>

                                        <div class="col-md-2">
                                            <label for="from">From</label>
                                            <div class="form-group">
                                                <input type="text" id="from" name="from" class="form-control" value="@System.Web.HttpContext.Current.Session["SDATE"]">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <label for="from">To</label>
                                            <div class="form-group">
                                                <input type="text" id="to" name="to" class="form-control" value="@System.Web.HttpContext.Current.Session["EDATE"]">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <label for="from"></label>
                                            <div class="form-group">
                                                <input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Date
                                </th>
                                <th>Time</th>
                                <th>
                                    No
                                </th>

                                <th>
                                    CHA Name
                                </th>
                                <th>
                                    Amount
                                </th>
                                <th>Ack No</th>
                                <th>
                                    S
                                </th>
                                <th class="hidden">
                                    gst
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
            $(document).ready(function () {
                $(document).on('hidden.bs.modal', function (e) {
                    var target = $(e.target);
                    target.removeData('bs.modal')
                          .find(".modal-content").html('');
                });
                $('#dataTables-example').dataTable({
                    "bServerSide": true,
                    "sAjaxSource": "@Url.Action("GetAjaxData", "SealBill")",
                    "bProcessing": true,
                    "bStateSave": true,
                    "aaSorting": [[1, "asc"]],
                    "oLanguage": {
                        "sSearch": "Search: "
                    },
                    "aoColumns": [
                        { "sName": "", "sClass": "col-lg-2" },
                        { "sName": "" },
                        { "sName": "" },
                        { "sName": " ", "sClass": "col-lg-3" },
                        {  "sName": "", "sClass": "col-lg-1" },
                        { "sName": "" },
                        { "sName": "" },
                        { "sName": "", "sClass": "col-lg-2 hide" },
                        {
                            "sClass": "col-sm-1 cent",
                            "sName": "ID",
                            "bSearchable": false,
                            "bSortable": false,
                            "fnRender": function (oObj) {
                                if (oObj.aData[5] > 0) {
                                    return '<a  class="btn btn-default btn-xs"   href="@Url.Action("AForm", "SealBill")/' +
                                        oObj.aData[8] + '~' + oObj.aData[7] + '\" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false"><i class="glyphicon glyphicon-print"></i></a>&nbsp;&nbsp;<a  class="btn btn-primary btn-xs"   href="@Url.Action("APrintView", "SealBill")/' +
                                        oObj.aData[8] + '\" target="_blank"><i class="glyphicon glyphicon-print"></i></a>&nbsp;&nbsp;<a   class="btn btn-warning btn-xs"   href="@Url.Action("MForm", "MailForm")/' +
                                        oObj.aData[8] + '\" target="_blank"><i class="glyphicon glyphicon-envelope"></i></a>    ';
                                }
                                else {
                                    return ' <a   class="btn btn-primary btn-xs"   href="@Url.Action("Edit", "SealBill")/' +
                                        oObj.aData[8] + '\"><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp; <a class="btn btn-default btn-xs" href="@Url.Action("BForm", "SealBill")/' + oObj.aData[8] + '\"  data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false"><i class="glyphicon glyphicon-bold"></i></a>  &nbsp;&nbsp; <a   class="btn btn-default btn-xs"   href="@Url.Action("AForm", "SealBill")/' +
                                        oObj.aData[8] + '~' + oObj.aData[7] + '\" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false"><i class="glyphicon glyphicon-print"></i></a>&nbsp;&nbsp;<a  class="btn btn-primary btn-xs"   href="@Url.Action("APrintView", "SealBill")/' +
                                        oObj.aData[8] + '\" target="_blank"><i class="glyphicon glyphicon-print"></i></a>&nbsp;&nbsp;<a   class="btn btn-warning btn-xs"   href="@Url.Action("MForm", "MailForm")/' +
                                        oObj.aData[8] + '\" target="_blank"><i class="glyphicon glyphicon-envelope"></i></a>   &nbsp;&nbsp;<a  class="btn btn-danger del btn-xs" href="#" id="' + oObj.aData[8] + '" "><i class="glyphicon glyphicon-trash"></i> </a> ';
                                }
                            }
                        }

                    ]
                });


                $("#from").datepicker({
                    defaultDate: "+1w",
                    changeMonth: true,
                    numberOfMonths: 3,
                    dateFormat: 'dd-mm-yy',
                    onClose: function (selectedDate) {
                        $("#to").datepicker("option", "minDate", selectedDate);
                    }
                });
                $("#to").datepicker({
                    defaultDate: "+1w",
                    changeMonth: true,
                    numberOfMonths: 3,
                    dateFormat: 'dd-mm-yy',
                    onClose: function (selectedDate) {
                        $("#from").datepicker("option", "maxDate", selectedDate);
                    }
                });
                //------------Delete Record-------------//
                $(document).on("click", "a.del", function () {
                    var r = confirm("Are you sure to delete this record ?");

                    if (r == true) {
                        var idx = $(this).attr('id');
                        base = window.location.origin;
                        $.post(base + "/SealBill/Del",
                               {
                                   id: idx, fld: ""
                               },
                             function (data, status) {
                                 if (data == "") {
                                     alert("You are not Authorized to Delete....!");
                                 }
                                 else if (data != "Deleted successfully...") {
                                     alert(data);
                                 }
                                 else {
                                     alert(data);
                                     location.replace(base + "/SealBill");}
                             });
                    }
                    return false;
                });//End
            });
    </script>
}

<div id="myModal" class="modal fade">


</div>
