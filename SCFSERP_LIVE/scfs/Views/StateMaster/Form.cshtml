@using scfs_erp.Models;
@model scfs_erp.Models.StateMaster
@{
    ViewBag.Title = "State Master";
}
<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading ">
                State Master
            </div>
            <div class="panel-body fusion_frm">

                @using (Html.BeginForm("savedata", "StateMaster", FormMethod.Post, new { id = "submitForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Raw(ViewBag.msg)
                    @Html.ValidationSummary(true)
                    @*@Html.ValidationSummary(true)*@
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-4 hidden">
                                <div class="form-group">
                                    <label>Primary</label>
                                    @Html.TextBoxFor(model => Model.STATEID, new { @class = "form-control  STATEID", @id = "STATEID" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Code<span class="required-field"></span></label>@**@
                                    @Html.TextBoxFor(model => Model.STATECODE, new { @class = "form-control STATECODE", @id = "STATECODE" })
                                    <input type="text" value="@Model.STATECODE" name="i_STATECODE" hidden>
                                    @Html.ValidationMessageFor(model => model.STATECODE)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Description<span class="required-field"></span></label>
                                    @Html.TextBoxFor(model => Model.STATEDESC, new { @class = "form-control  STATEDESC", @id = "STATEDESC" })
                                    <input type="text" value="@Model.STATEDESC" name="i_STATEDESC" hidden>
                                    @Html.ValidationMessageFor(model => model.STATEDESC)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Status </label>
                                    @Html.DropDownList("STATETYPE", null, new { @class = "form-control STATETYPE", @id = "STATETYPE" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Status </label>
                                    @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control DISPSTATUS", @id = "DISPSTATUS" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 box-footer">
                            @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs  pull-left" onclick="JavaScript:history.back()" />*@
                            <a href="@Url.Action("Index", "StateMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>

                            @*<a href="javascript:document.getElementById('submitForm').submit()" class="btn btn-primary btn-xs  ">Save</a>*@
                            <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('.msg').delay(1200).fadeOut(1000);
        $("#STATECODE").keyup(function () {//...capitalize each

            $(this).val($(this).val().toUpperCase());
        });

        $('#btnsave').click(function () {
            if ($('#STATECODE').val() == "") {
                alert('Please Enter Code !!');
                $('#STATECODE').focus();
                return false;
            }
            if ($('#STATEDESC').val() == "") {
                alert('Please Enter Description !!');
                $('#STATEDESC').focus();
                return false;
            }

            var pdate = new Date();

            if ($('#STATEID').val() == "") { $('#STATEID').val(0); }

            var tab = {
                STATEID: $('#STATEID').val(),
                STATECODE: $('#STATECODE').val(),
                STATEDESC: $('#STATEDESC').val(),
                STATETYPE: $('#STATETYPE').val(),
                DISPSTATUS: $('#DISPSTATUS').val(),
                CUSRID: "",
                LMUSRID: 1,
                PRCSDATE: pdate
            };
            $.ajax({
                url: "/StateMaster/savedata",
                data: JSON.stringify(tab),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (status) {
                    if (status == "Update") {
                        alert('State Master Details Updated Successfully !! ');

                        var returnurl = "@Url.Action("Index", "StateMaster")";
                        window.location.href = returnurl;
                    }
                    else if (status == "Success") {
                        alert('State Master Details Inserted Successfully !! ');
                        var returnurl = "@Url.Action("Index", "StateMaster")";
                        window.location.href = returnurl;
                    }
                    else if (status == "Existing") {
                        alert('State Master Details Already Inserted !! ');
                        $('#STATECODE').val("");
                        $('#STATEDESC').val("");
                        $('#STATETYPE').val("");
                        var returnurl = "@Url.Action("Form", "StateMaster")";
                        window.location.href = returnurl;
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });


        });



    </script>

}
