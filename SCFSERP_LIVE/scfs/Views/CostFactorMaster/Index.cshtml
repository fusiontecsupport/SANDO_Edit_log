
@model IEnumerable<scfs_erp.Models.CostFactorMaster>


@{
    ViewBag.Title = "Cost Factor Master";
}
<section id="main-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <div class="box-name">
                            <i class="glyphicon glyphicon-share"></i><strong>@ViewBag.Title</strong>
                        </div>
                        <div class="box-icons">
                            <button onclick="parent.location = '@Url.Action("Form","CostFactorMaster")'; return false;" class=" btn-success"> Create New </button>
                        </div>
                        <div class="no-move"></div>
                    </div>
                    <div class="box-content no-padding">
                        <br />
                        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CFDESC)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CFEXPR)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DISPSTATUS)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {

            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "CostFactorMaster")",
                "bProcessing": true,
                "bStateSave": true,
                "aaSorting": [[1, "desc"]],
                "oLanguage": {
                    "sSearch": "Search: "
                },
                "aoColumns": [
                    { "sName": "" },
                    { "sName": " ", "sClass": "action" },
                    { "sName": "" },
                    {
                        "sClass": "col-md-2 cent",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            return ' <a   class="btn btn-primary btn-xs"  href = "@Url.Action("Edit","CostFactorMaster")/' +
                                oObj.aData[3] + '\" title=Modify Details "><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;<a  class="btn btn-danger btn-xs del" href="#" id="' +
                                oObj.aData[3] + '\"> <i class="glyphicon glyphicon-trash"></i> </a> ';
                        }
                    }

                ]
            });

            //------------Delete Record-------------//
            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/CostFactorMaster/Del",
                        {
                            id: idx, fld: "COSTFACTOR"
                        },
                        function (data, status) {
                            alert(data);
                            if (data == "Deleted Successfully ...")
                                location.replace(base + "/CostFactorMaster");
                        });
                }
                return false;
            });//End
        });
    </script>
}

