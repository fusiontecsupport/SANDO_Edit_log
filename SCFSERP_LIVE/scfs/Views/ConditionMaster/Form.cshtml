
@using scfs_erp.Models;
@model scfs_erp.Models.ConditionMaster

@{
    ViewBag.Title = "Condition Master";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>Condition Master form</strong>
                </div>
            </div>
            <div class="box-content" data-ng-app="myModule">
                <form action="@Url.Content("~/ConditionMaster/savedata")" method="post" accept-charset="utf-8" id="conditionmasterform" data-ng-controller="myController" name="conditionmasterform">
                    @Html.ValidationSummary(true)
                    <fieldset id="ConditionMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.CONDTNID, new { @class = "form-control  CONDTNID", @id = "CONDTNID" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span> </label>
                                        @Html.TextBoxFor(model => Model.CONDTNCODE, new { @class = "form-control CONDTNCODE", @id = "CONDTNCODE" })
                                        <input type="text" value="@Model.CONDTNCODE" name="i_CONDTNCODE" hidden>
                                        @Html.ValidationMessageFor(model => model.CONDTNCODE, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description<span class="required-field"></span> </label>
                                        @Html.TextBoxFor(model => Model.CONDTNDESC, new { @class = "form-control  CONDTNDESC", @id = "CONDTNDESC" })
                                        <input type="text" value="@Model.CONDTNDESC" name="i_CONDTNDESC" hidden>
                                        @Html.ValidationMessageFor(model => model.CONDTNDESC, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs  pull-left" onclick="JavaScript:history.back()" />*@
                                <a href="@Url.Action("Index", "ConditionMaster")" class="btn btn-primary pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')" tabindex="4012">Go Back</a>
                                <input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs" id="save" />

                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

