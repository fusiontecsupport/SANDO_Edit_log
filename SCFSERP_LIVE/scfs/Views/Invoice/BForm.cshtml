                    $("#TRANIMPADDR1").val("");
                    $("#TRANIMPADDR2").val("");
                    $("#TRANIMPADDR3").val("");
                    $("#TRANIMPADDR4").val("");
                    $(".GSTNO").val("");
                }


            }
        })

    }

