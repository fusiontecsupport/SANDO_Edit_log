@model IEnumerable<scfs_erp.Models.TransactionMaster>

@{
    ViewBag.Title = "Import Invoice";
}

<div class="col-xs-12">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">
                <i class="glyphicon glyphicon-import"></i> <strong>@ViewBag.Title</strong>
                <div class="btn-group pull-right" style="margin-top:-5px">
                    <button type="button" class="btn btn-success dropdown-toggle btn-xs"
                            data-toggle="dropdown">
                        <i class="fa fa-plus-square "></i>Create <span class="caret"></span>
                    </button>

                    <ul class="dropdown-menu" role="menu">
                        <li style="width:50px"><a href=@Url.Action("GSTForm", "ImportInvoice")>IGM No Invoice</a></li>
                        <li style="width:50px"><a href=@Url.Action("DOGSTForm", "ImportInvoice")>DO No Invoice</a></li>
                    </ul>

                </div>
                
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <br />
        <div class="row">
            <div class="col-xs-3"> </div>
            <div class="col-xs-12">
