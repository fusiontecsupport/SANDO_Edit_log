                            $("#PGIDID").val(data[0].PGIDID);


                            $("#STMRNAME").val(data[0].STMRNAME);


                            $("#CHAID").val(data[0].CHAID);


                            $("#CHASNAME").val(data[0].CHANAME);


                            $("#GOPLCNAME").val(data[0].CHANAME);

                            $("#VHLNO").val(data[0].VHLNO);
                            $("#GDRVNAME").val(data[0].DRVNAME)
                            $.ajax({

                                type: 'get',
                                url: '@Url.Action("GetCha","EmptyVehicleTicket")/' + $("#PGIDID").val(), // we are calling json method

